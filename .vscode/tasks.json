{
	"version": "2.0.0",
	"tasks": [
		{	
			"type": "cppbuild",
			"label": "C/C++: cpp 生成活动文件",
			"command": "/usr/bin/g++",
			"args": [
				// "-O2",
				"-std=c++17",
				"-pthread",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/*/*.cpp",
				"-I",
				"${workspaceFolder}/include",
				"-I",
				"${workspaceFolder}/../libevent-2.1.12-stable/include",
				"-o",
				"${workspaceFolder}/build/${fileBasenameNoExtension}",
				"-L",
				"${workspaceFolder}/../libevent-2.1.12-stable/"
				
				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind":"build",
				"isDefault": true
			},
			"detail": "编译器: /usr/bin/cpp"
		}
	]
}